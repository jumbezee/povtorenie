<h4>Post details</h4>
<p>
<br />
	<%= @row['content']%>
	<br />
	<br />
	Addet at <%= @row['created_date']%>
</p>
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment|%>
<p>
	<%=comment['content']%>
	<br />
	<br />
	<span style="font-size: 80%; color: #999">Comment added <%=comment['created_date']%></span>
</p>
<hr />
<% end %>

<p>
	<form action="/details/<%= @row['id']%>" method="POST" role="form">
		<textarea name="content"class="form-control" rows="6" placeholder="Type comment text here"></textarea>
		<br />
		<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>